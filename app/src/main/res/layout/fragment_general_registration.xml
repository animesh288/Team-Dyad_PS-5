<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:scrollbars="vertical"
    android:padding="20dp"
    tools:context=".fragments.GeneralRegistrationFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:hint="Sex"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">

        <AutoCompleteTextView
            android:id="@+id/sex"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/aclonica"
            android:textColor="@color/purple_500"
            android:inputType="none"
            />

    </com.google.android.material.textfield.TextInputLayout>


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:cardCornerRadius="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Age"
                android:layout_margin="5dp"
                android:fontFamily="@font/aclonica"
                android:textAlignment="center"
                android:layout_weight="1"/>
            <EditText
                android:id="@+id/age"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:inputType="number"
                android:fontFamily="@font/aclonica"
                android:textAlignment="center"
                android:layout_weight="1"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:cardCornerRadius="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Height (cm)"
                android:layout_margin="5dp"
                android:fontFamily="@font/aclonica"
                android:textAlignment="center"
                android:layout_weight="1"/>
            <EditText
                android:id="@+id/height"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:inputType="number"
                android:fontFamily="@font/aclonica"
                android:textAlignment="center"
                android:layout_weight="1"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:cardCornerRadius="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Weight (kg)"
                android:layout_margin="5dp"
                android:fontFamily="@font/aclonica"
                android:textAlignment="center"
                android:layout_weight="1"/>
            <EditText
                android:id="@+id/weight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:inputType="number"
                android:fontFamily="@font/aclonica"
                android:textAlignment="center"
                android:layout_weight="1"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:cardCornerRadius="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Family Size"
                android:layout_margin="5dp"
                android:fontFamily="@font/aclonica"
                android:textAlignment="center"
                android:layout_weight="1"/>
            <EditText
                android:id="@+id/family_size"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:inputType="number"
                android:fontFamily="@font/aclonica"
                android:textAlignment="center"
                android:layout_weight="1"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:cardCornerRadius="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Family Income"
                android:layout_margin="5dp"
                android:fontFamily="@font/aclonica"
                android:textAlignment="center"
                android:layout_weight="1"/>
            <EditText
                android:id="@+id/family_income"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:inputType="number"
                android:fontFamily="@font/aclonica"
                android:textAlignment="center"
                android:layout_weight="1"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:cardCornerRadius="10dp">


    </androidx.cardview.widget.CardView>
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:hint="Education"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">

        <AutoCompleteTextView
            android:id="@+id/education"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/aclonica"
            android:textColor="@color/purple_500"
            android:inputType="none"
            />

    </com.google.android.material.textfield.TextInputLayout>

    <CheckBox
        android:id="@+id/overweight"
        android:layout_width="match_parent"
        android:fontFamily="@font/aclonica"
        android:layout_height="wrap_content"
        android:text="Ever been overweight?"/>
    <CheckBox
        android:id="@+id/trouble_sleep"
        android:layout_width="match_parent"
        android:fontFamily="@font/aclonica"
        android:layout_height="wrap_content"
        android:text="Trouble Sleeping?"/>
<!--    <CheckBox-->
<!--        android:id="@+id/alcoholic"-->
<!--        android:layout_width="match_parent"-->
<!--        android:fontFamily="@font/aclonica"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:text="Ever been alcoholic?"/>-->
    <CheckBox
        android:id="@+id/smoker"
        android:layout_width="match_parent"
        android:fontFamily="@font/aclonica"
        android:layout_height="wrap_content"
        android:text="Ever smoked?"/>
    <CheckBox
        android:id="@+id/memory"
        android:layout_width="match_parent"
        android:fontFamily="@font/aclonica"
        android:layout_height="wrap_content"
        android:text="Problem with memory?"/>
    <CheckBox
        android:id="@+id/lifetime_alcohol_consumption"
        android:layout_width="match_parent"
        android:fontFamily="@font/aclonica"
        android:layout_height="wrap_content"
        android:text="Ever consumed alcohol?"/>
    <CheckBox
        android:id="@+id/cant_work"
        android:layout_width="match_parent"
        android:fontFamily="@font/aclonica"
        android:layout_height="wrap_content"
        android:text="Are you fully handicapped?"/>
    <CheckBox
        android:id="@+id/limited_work"
        android:layout_width="match_parent"
        android:fontFamily="@font/aclonica"
        android:layout_height="wrap_content"
        android:text="Are you partially handicapped?"/>

    <CheckBox
        android:id="@+id/chronic"
        android:layout_width="match_parent"
        android:fontFamily="@font/aclonica"
        android:layout_height="wrap_content"
        android:text="Any chronic disease or addiction?"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="how frequently you visit doctor(yearly)?"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:textSize="10dp"
        android:fontFamily="@font/aclonica"
        android:textColor="@color/purple_200"/>

    <com.google.android.material.slider.Slider
        android:id="@+id/prescriptionSlider"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:stepSize="1"
        android:valueFrom="0.0"
        android:valueTo="23"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/continuousRangeSlider" />

    <Button
        android:id="@+id/next_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NEXT"
        android:layout_gravity="center"/>
    </LinearLayout>

</ScrollView>